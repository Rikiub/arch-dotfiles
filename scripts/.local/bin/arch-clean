#!/usr/bin/env sh

# Use sudo for current shell
sudo echo "" ;\

# Remove $HOME/.cache
echo "Erasing... $(du -sh $HOME/.cache)" ;\
rm -rf $HOME/.cache ;\

# Clean pacman cache
paccache -r ;\

# Remove orphans
pacman -Qtdq | sudo pacman -Rns - ;\

# Remove optional/circular dependences
pacman -Qqd | sudo pacman -Rsu -\
