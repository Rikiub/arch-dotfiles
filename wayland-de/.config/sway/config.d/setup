exec {
	# --- DEFAULT ---
	swayidle -w \
		timeout $swayidle_lock 'swaylock' \
		timeout $swayidle_timeout 'swaymsg "output * power off"' \
		resume 'swaymsg "output * power on"'

	# --- ETC ---
	#dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK # fix slow GTK applications launch
	/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1                     # polkit-gnome
	/usr/lib/geoclue-2.0/demos/agent                                              # geoclue agent
	
	# --- SCRIPTS ---
	$scripts/autotiling.py
	$scripts/inactive-windows-transparency.py
}
