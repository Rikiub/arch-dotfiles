# ---LAUNCHERS---

# Start Wofi
#bindsym $mod+d exec wofi -I -b -a -p "" --show drun

# darkman GTK Theme switch

bindsym $mod+Shift+d exec darkman toggle

# -ROFI-

# Check the theme styles on:
# https://github.com/adi1090x/rofi

# rofi directory
set $rofi_dir $HOME/.config/rofi
set $rofi_launcher launchers/type-2/style-1.rasi
set $rofi_emoji launchers/type-4/style-2.rasi
set $rofi_calc launchers/type-1/style-3.rasi

# Rofi (app launcher)
bindsym $mod+d \
exec rofi \
-show drun \
-theme $rofi_dir/$rofi_launcher \

# Rofi (powermenu)
bindsym $mod+Shift+e \
exec $rofi_dir/powermenu/type-1/powermenu.sh \

# Roji (emoji)
#bindsym $mod+e \
#exec rofi \
#-show emoji \
#-theme $rofi_dir/$rofi_emoji \

# Rofi (calc)
