# ---FLOATING RULES---

# --FLOATING--
for_window [class="galculator"] floating enable; sticky enable
for_window [class="qalculate-gtk"] floating enable; sticky enable
for_window [class="qalculate-qt"] floating enable; sticky enable
for_window [class="file-roller"] floating enable
for_window [class="azote"] floating enable;
for_window [class="yad"] floating enable

for_window [class="nm-connection-editor"] floating enable; sticky enable
for_window [class="pavucontrol"] floating enable; sticky enable, resize set width 50 ppt height 60 ppt
for_window [class="blueman-manager"] floating enable; sticky enable
for_window [class="blueman-adapters"] floating enable; sticky enable
for_window [class="blueman-sendto"] floating enable; sticky enable

for_window [class="ristretto"] floating enable, resize set width 50 ppt height 80 ppt
for_window [class="gthumb"] floating enable
for_window [class="imv"] floating enable
for_window [class="org.gnome.Meld"] floating enable

for_window [class="com.github.hluk.copyq"] floating enable, resize set width 50 ppt height 80 ppt; sticky enable

for_window [class="firefox"] inhibit_idle fullscreen; border none; max_render_time off
for_window [class="firefox"] inhibit_idle fullscreen; border none; max_render_time off
for_window [class="chromium"] inhibit_idle fullscreen; border none; max_render_time off
for_window [class="brave-browser"] inhibit_idle fullscreen; border none; max_render_time off
for_window [class="microsoft-edge"] inhibit_idle fullscreen; border none; max_render_time off
for_window [class="vivaldi-stable"] inhibit_idle fullscreen; border none; max_render_time off

for_window [class="mpv"] inhibit_idle visible; border none; max_render_time off
for_window [class="vlc"] inhibit_idle visible; border none; max_render_time off
for_window [class="Anydesk"] inhibit_idle visible; border none;

for_window [class="telegramdesktop"] floating enable
for_window [class="telegramdesktop" title="Telegram"] floating disable

for_window [class=".*.exe"] inhibit_idle fullscreen; floating enable; border none
for_window [class="gamescope"] inhibit_idle fullscreen; floating enable; border none
for_window [class="steam_app.*"] inhibit_idle fullscreen; floating enable; border none
for_window [class="Steam"] floating enable; max_render_time off

