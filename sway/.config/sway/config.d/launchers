# --- LAUNCHERS ---

# darkman toggle
bindsym $mod+Shift+d \
exec darkman toggle

# Terminal
bindsym $mod+Return \
exec $TERM

# Menu/Launcher
bindsym $mod+d \
exec $menu

# Powermenu
bindsym $mod+Shift+e \
exec $powermenu

# --- SCREENSHOT ---
set $screenshot $(echo $(xdg-user-dir PICTURES)"/"$(date +'screenshot-%Y%m%d-%H%M%S.png'))

# Grimshot
bindsym Print \
exec grimshot --notify save output $screenshot

bindsym $mod+Shift+s \
exec grimshot --notify save area $screenshot

# Color picker
bindsym $mod+Shift+a \
exec $color_picker
