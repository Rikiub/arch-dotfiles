# ---LAUNCHERS---

# darkman GTK Theme switch
bindsym $mod+Shift+d exec darkman toggle

# --ROFI--

# Check the theme styles on:
# https://github.com/adi1090x/rofi

# rofi directory
set $rofi_scripts $HOME/.config/rofi/scripts

# Rofi (app launcher)
bindsym $mod+d \
exec $rofi_scripts/launcher_t2 \

# Rofi (powermenu)
bindsym $mod+Shift+e \
exec $rofi_scripts/powermenu_t1

# --OTHERS--

# swaynag (powermenu)
#bindsym $mod+Shift+e \
#exec sh $sway_scripts/swaynag-powermenu.sh

# ---SCREENSHOT---

set $screenshot_dir $(echo $(xdg-user-dir PICTURES)"/"$(date +'screenshot-%Y%m%d-%H%M%S.png'))

# Screenshot (Grimshot)
bindsym Print \
exec grimshot --notify save output $screenshot_dir

# Screenshot (Grimshot)
bindsym $mod+Shift+s \
exec grimshot --notify save area $screenshot_dir

# Color picker
bindsym $mod+Shift+a \
exec wl-color-picker clipboard
