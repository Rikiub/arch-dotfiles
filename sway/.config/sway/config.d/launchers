# --- LAUNCHERS ---

# Terminal
bindsym $mod+Return \
exec $TERM

# Menu/Launcher
bindsym $mod+d \
exec $menu

# Powermenu
bindsym $mod+Shift+e \
exec $powermenu

# --- SCREENSHOT ---

set $screenshot $(xdg-user-dir PICTURES)/"Screenshots"

bindsym Print \
exec hyprshot -m output -o $screenshot

bindsym $mod+Shift+s \
exec hyprshot -m region -o $screenshot

# Color picker
bindsym $mod+Shift+a \
exec hyprpicker -a
