{
	"$schema": "/etc/xdg/swaync/configSchema.json",
	"positionX": "right",
	"positionY": "top",
	"layer": "overlay",
	"control-center-layer": "top",
	"layer-shell": true,
	"cssPriority": "application",

	"control-center-margin-top": 10,
	"control-center-margin-bottom": 0,
	"control-center-margin-right": 10,
	"control-center-margin-left": 0,

	"notification-2fa-action": true,
	"notification-inline-replies": true,
	"notification-icon-size": 40,
	"notification-body-image-height": 100,
	"notification-body-image-width": 200,

	"timeout": 10,
	"timeout-low": 5,
	"timeout-critical": 0,

	"fit-to-screen": false,

	"control-center-width": 400,
	"control-center-height": 500,
	"notification-window-width": 400,

	"keyboard-shortcuts": true,
	"image-visibility": "when-available",
	"transition-time": 200,

	"hide-on-clear": false,
	"hide-on-action": true,

	"script-fail-notify": true,
	"scripts": {
		"example-script": {
			"exec": "echo 'Do something...'",
			"urgency": "Normal"
		},
		"example-action-script": {
			"exec": "echo 'Do something actionable!'",
			"urgency": "Normal",
			"run-on": "action"
		}
	},
	"notification-visibility": {
		"example-name": {
			"state": "muted",
			"urgency": "Low",
			"app-name": "Spotify"
		}
	},
	"widgets": [
		"menubar",
		"title",
		"notifications"
	],
	"widget-config": {
		"inhibitors": {
			"text": "Inhibitors",
			"button-text": "Clear All",
			"clear-all-button": true
		},
		"title": {
			"text": "Notifications",
			"clear-all-button": true,
			"button-text": "Clear All"
		},
		"dnd": {
			"text": "Do Not Disturb"
		},
		"label": {
			"max-lines": 5,
			"text": "Label Text"
		},
		"mpris": {
			"image-size": 96,
			"image-radius": 30
		},
		"volume": {
			"label": ""
		},
		
	"menubar": {
			"menu#screenshot-buttons": {
				"label": "",
				"position": "left",
				"actions": [
					{
						"label": "󰒅  Select a region",
						"command": "swaync-client -cp && hyprshot -m region -o $(xdg-user-dir PICTURES)"
					},
					{
						"label": "󱣴  Entire screen",
						"command": "swaync-client -cp && hyprshot -m output -o $(xdg-user-dir PICTURES)"
					},
					{
						"label": "  Color picker",
						"command": "swaync-client -cp && hyprpicker -a"
					}
				]
			},
			"menu#screencast-buttons": {
				"label": "",
				"position": "left",
				"actions": [
					{
						"label": "  Record Video (With audio)",
						"command": "swaync-client -cp && ~/.local/bin/wfcord region mp4 --audio"
					},
					{
						"label": "󰈫  Record Video",
						"command": "swaync-client -cp && ~/.local/bin/wfcord region mp4"
					},
					{
						"label": "󰵸  Record GIF",
						"command": "swaync-client -cp && ~/.local/bin/wfcord region gif"
					}
				]
			},
			"menu#power-buttons": {
				"label": "",
				"position": "right",
				"actions": [
					{
						"label": "  Shutdown",
						"command": "systemctl poweroff"
					},
					{
						"label": "  Reboot",
						"command": "systemctl reboot"
					},
					{
						"label": "  Logout",
						"command": "loginctl terminate-session $XDG_SESSION_ID"
					},
					{
						"label": "  Lock",
						"command": "swaync-client -cp && swaylock"
					}
				]
			},
			"menu#app-buttons": {
				"label": "󰀻",
				"position": "left",
				"actions": [
					{
						"label": "󰌧  App Launcher",
						"command": "swaync-client -cp && ${XDG_CONFIG_HOME:-$HOME/.config}/rofi/drun.sh"
					},
					{
						"label": "  Switch Mode",
						"command": "darkman toggle"
					}
				]
			}
		}
	}
}
